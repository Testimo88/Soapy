<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_23</item>
        <item name="android:fontFamily">@font/futura_extra_bold</item>
    </style>

    <style name="custom_num_key_style">
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:background">@mipmap/number_box_blue</item>
        <item name="android:fontFamily">@font/futura_extra_bold</item>
    </style>

    <style name="function_btn_style">
        <item name="android:layout_width">@dimen/dp_35</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_8</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:layout_marginLeft">@dimen/dp_7</item>
        <item name="android:layout_marginRight">@dimen/dp_7</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:fontFamily">@font/futura_extra_bold</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/sel_btn_function</item>
    </style>

    <style name="btn_time_style">
        <item name="android:layout_width">@dimen/dp_150</item>
        <item name="android:layout_height">@dimen/dp_150</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@mipmap/input_bubble</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:fontFamily">@font/futura_extra_bold</item>
    </style>
</resources>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            style="@style/custom_num_key_style"
            android:text="1" />

        <TextView
            android:id="@+id/btn_2"
            style="@style/custom_num_key_style"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="2" />

        <TextView
            android:id="@+id/btn_3"
            style="@style/custom_num_key_style"
            android:text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_4"
            style="@style/custom_num_key_style"
            android:text="4" />

        <TextView
            android:id="@+id/btn_5"
            style="@style/custom_num_key_style"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="5" />

        <TextView
            android:id="@+id/btn_6"
            style="@style/custom_num_key_style"
            android:text="6" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_7"
            style="@style/custom_num_key_style"
            android:text="7" />

        <TextView
            android:id="@+id/btn_8"
            style="@style/custom_num_key_style"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="8" />

        <TextView
            android:id="@+id/btn_9"
            style="@style/custom_num_key_style"
            android:text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_delete"
            style="@style/custom_num_key_style"
           android:background="@mipmap/num_box_x"/>

        <TextView
            android:id="@+id/btn_0"
            style="@style/custom_num_key_style"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:text="0" />

        <TextView
            android:id="@+id/btn_confirm"
            style="@style/custom_num_key_style"
           android:background="@mipmap/confirm" />

    </LinearLayout>

</LinearLayout>
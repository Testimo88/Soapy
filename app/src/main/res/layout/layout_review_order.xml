<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <!--    <TextView-->
    <!--        style="@style/text_style"-->
    <!--        android:layout_marginTop="30dp"-->
    <!--        android:text="Review Order"-->
    <!--        android:textColor="@color/black" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_100"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_time_style"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:text="1" />

        <TextView
            android:id="@+id/tv_wash_duration"
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:textStyle="normal"
            android:text="@string/wash_duration"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_shampoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_100"
        android:orientation="horizontal">

        <TextView
            style="@style/btn_time_style"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="center"
            android:text="2" />

        <TextView
            style="@style/text_style"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textStyle="normal"
            android:text="Shampoo        : Sensitive"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        style="@style/text_style"
        android:layout_marginTop="@dimen/dp_30"
        android:text="Is this order correct?"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_yes"
        style="@style/text_style"
        android:layout_width="@dimen/dp_280"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_round_green_button"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:text="Yes"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_restart"
        style="@style/text_style"
        android:layout_width="@dimen/dp_280"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/shape_round_red_button"
        android:gravity="center"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:text="No, let me restart"
        android:textColor="@color/black" />

</LinearLayout>
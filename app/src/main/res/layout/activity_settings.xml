<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.android.soapy.weight.CustomLayout
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Rinse"
        app:textViewText="冲水" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Shampoo"
        app:textViewText="香波" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="shampoo_senior"
        app:textViewText="香波+" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Conditioner"
        app:textViewText="护毛" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Conditioner_senior"
        app:textViewText="护毛+" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Blow"
        app:textViewText="吹风" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Disinfect"
        app:textViewText="消毒" />

    <com.android.soapy.weight.CustomLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:sharedKey="Pause"
        app:textViewText="暂停" />
</LinearLayout>